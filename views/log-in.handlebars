<div class="col-6 align-self-center">
  <form class="log-in-form">
    <div class="card my-3 border-dark shadow-sm">
      <div class="card-header bg-light">
        <h5 class="card-title m-2 text-center">Log In</h5>
      </div>
      <div class="card-body">
        <label for="inputEmail" class="col-form-label pt-0">Email</label>
        <input type="email" class="form-control" id="inputEmail" />
        <label for="inputPassword" class="col-form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword" />
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary mt-3">Log In</button>
        </div>
      </div>
      <div class="card-footer text-center">
        <p class="text-center m-2">
          <a href="/sign-up" class="text-decoration-none">New user?</a>
        </p>
      </div>
    </div>
  </form>
</div>

<script src="/javascript/log-in.js"></script>