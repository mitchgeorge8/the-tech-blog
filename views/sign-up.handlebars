<div class="col-6 align-self-center">
  <form class="sign-up-form">
    <div class="card my-3 border-dark shadow-sm">
      <div class="card-header bg-light">
        <h5 class="card-title m-2 text-center">Sign Up</h5>
      </div>
      <div class="card-body">
        <label for="inputUsername" class="col-form-label pt-0">Username</label>
        <input type="username" class="form-control" id="inputUsername" />
        <label for="inputEmail" class="col-form-label pt-0">Email</label>
        <input type="email" class="form-control" id="inputEmail" />
        <label for="inputPassword" class="col-form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword" />
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary mt-3">Sign Up</button>
        </div>
      </div>
      <div class="card-footer text-center">
        <p class="text-center m-2">
          <a href="/log-in" class="text-decoration-none">Already have an
            account?</a>
        </p>
      </div>
    </div>
  </form>
</div>

<script src="/javascript/sign-up.js"></script>