<div class="card my-3 border-dark shadow-sm">
  <div class="card-header bg-light">
    <div class="d-flex justify-content-between align-items-center">
      <h6 class="card-title m-2">Comments</h6>
    </div>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      {{#each post.comments}}
        <li class="list-group-item">
          <p class="text-black text-opacity-75 text-decoration-underline">
            {{user.username}}
            on
            {{formatDate createdAt}}:
          </p>
          <p>{{comment_text}}</p>
        </li>
      {{/each}}
      <li class="list-group-item">
        {{#if loggedIn}}
          <form class="comment-form">
            <label
              for="inputComment"
              class="col-form-label"
            >Leave a comment:</label>
            <input type="text" class="form-control" id="inputComment" />
            <button type="submit" class="btn btn-primary mt-3">Add comment</button>
        {{/if}}
      </li>
    </ul>
  </div>
</div>