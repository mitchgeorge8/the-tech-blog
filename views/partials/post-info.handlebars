<div class="card my-3 border-dark shadow-sm">
  <a href="/post/{{id}}" class="text-decoration-none text-reset">
    <div class="card-header bg-light">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-title m-2">{{title}}</h5>
        <p class="text-muted m-2">{{user.username}}
          on
          {{formatDate createdAt}}</p>
      </div>
    </div>
  </a>
  <div class="card-body">
    <p class="card-text">{{limitText post_content}}</p>
  </div>
</div>