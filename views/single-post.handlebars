{{#with post}}
  <div class="container">
    <div class="card my-3 border-dark shadow-sm">
      <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="card-title m-2">{{title}}</h5>
          <p class="text-muted m-2">{{user.username}}
            on
            {{formatDate createdAt}}</p>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text">{{post_content}}</p>
      </div>
    </div>
  </div>
{{/with}}

<div class="container">
  {{> comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}