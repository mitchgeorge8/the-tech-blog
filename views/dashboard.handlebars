<section>
  <h4 class="text-center mt-2">Create New Post</h4>
  <div class="container">
    <div class="card my-3 border-dark shadow-sm">
      <div class="card-body">
        <form class="new-post-form">
          <label for="inputTitle" class="col-form-label pt-0">Title</label>
          <input type="text" class="form-control" id="inputTitle" />
          <label for="inputContent" class="col-form-label">Content</label>
          <textarea
            class="form-control"
            aria-label="Content textarea"
            id="inputContent"
          ></textarea>
          <button type="submit" class="btn btn-primary mt-3">Create</button>
        </form>
      </div>
    </div>
  </div>
</section>

{{#if posts.length}}
  <section>
    <h4 class="text-center">Your Posts</h4>
    <div class="container">
      {{#each posts as |post|}}
        <div class="card my-3 border-dark shadow-sm">
          <a href="/post/{{id}}" class="text-decoration-none text-reset">
            <div class="card-header bg-light">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title m-2">{{title}}</h5>
                <p class="text-muted m-2">{{user.username}}
                  on
                  {{formatDate createdAt}}</p>
              </div>
            </div>
          </a>
          <div class="card-body">
            <p class="card-text">{{limitText post_content}}</p>
          </div>
          <div class="card-footer text-center">
            <p class="text-center m-0">
              <a
                href="/dashboard/edit/{{post.id}}"
                class="text-decoration-none"
              >Edit post</a>
            </p>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}

<script src="/javascript/add-post.js"></script>